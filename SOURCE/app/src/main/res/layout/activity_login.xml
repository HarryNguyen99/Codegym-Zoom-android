<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2A3280"
    >

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="141dp"
        android:layout_marginLeft="141dp"
        android:layout_marginTop="97dp"
        app:srcCompat="@mipmap/ic_logo" />

    <LinearLayout
        android:id="@+id/ll_SignIn"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:orientation="horizontal"
        android:layout_below="@+id/img_logo"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/tv_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:textColor="#EA5230"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textColor="#FFFFFF"
            android:layout_toRightOf="@id/tv_signin"
            android:text="Sign up"
            android:textSize="25sp"
            android:textStyle="bold" />


    </LinearLayout>

    <EditText
        android:id="@+id/edt_user"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColorHint="#ffffff"
        android:hint="username"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/ll_SignIn"
        />

    <EditText
        android:id="@+id/edt_pass"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="password"
        android:textColorHint="#ffffff"
        android:inputType="textPassword"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/edt_user"
        />


    <Button
        android:id="@+id/btn_SignIn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/edt_pass"
        android:layout_marginStart="132dp"
        android:layout_marginLeft="132dp"
        android:layout_marginTop="11dp"
        android:text="Sign In" />



    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="550dp"
        app:srcCompat="@mipmap/ic_facebook"  />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="219dp"
        android:layout_marginTop="555dp"
        app:srcCompat="@mipmap/ic_google" />

</RelativeLayout>